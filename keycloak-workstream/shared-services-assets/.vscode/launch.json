  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "CDK Debugger - Nodejs",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "./node_modules/ts-node/register/transpile-only"],
      "args": ["./bin/shared-services-assets.ts"],
      "env": {
        "AWS_DEFAULT_REGION": "us-east-1",
        "CDK_DEFAULT_REGION": "us-east-1",
        "DEBUG": "true",
        "ENVIRONMENT": "dev"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debugger - Nodejs",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "./node_modules/ts-node/register/transpile-only"],
      "args": ["${file}"],
      "env": {
        "AWS_DEFAULT_REGION": "us-east-1",
        "CDK_DEFAULT_REGION": "us-east-1",
        "DEBUG": "true",
        "ENVIRONMENT": "dev"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
